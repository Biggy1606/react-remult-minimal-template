{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "moduleResolution": "NodeNext"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"],
    "references": [
        {
            "path": "../tsconfig.json"
        }
    ]
}
